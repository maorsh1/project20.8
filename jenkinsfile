pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker build -t my-python-app .'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Add your testing steps here, e.g., run pytest
                    sh 'echo "Running tests..."'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Push Docker image to Docker Hub
                    sh 'docker login -u <username> -p <password>'
                    sh 'docker tag my-python-app <username>/my-python-app:latest'
                    sh 'docker push <username>/my-python-app:latest'

                    // Deploy Docker container on a remote server
                    sshagent(['<ssh-credentials-id>']) {
                        sh 'ssh user@remote-server "docker pull <username>/my-python-app:latest && docker run -d -p 5000:5000 <username>/my-python-app:latest"'
                    }
                }
            }
        }
    }
}
